<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dict_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEFINITIONS:"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/meaning_txtview"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. A greeting(salutaton) said when meeting someone or acknowledging someones arrival or presense"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SYNONYMS"
            android:textStyle="bold"
            android:layout_marginTop="25dp" />
        <TextView
            android:id="@+id/synonyms_txtview"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello\n\ngracie\n\nheya"
            android:textSize="16sp"/>
</LinearLayout>
</ScrollView>